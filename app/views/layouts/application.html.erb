<!DOCTYPE html>
<html>
<head>
  <title>EmpregoJa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Emprego Já!</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <% if current_user %>
          <li><a href=<%=new_job_path%>>Cadastre sua vaga</a></li>
          <%end%>
          <li><a href="#about">About</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li class="navbar-right"><a href=<%=destroy_user_session_path%> data-method="delete">Sair</a></li>
            <li class="navbar-right"><a href='/users/edit'>Olá <%=current_user.email%></a></li>
          <% else %>
            <li class="navbar-right"><a href="/users/sign_in">Entrar</a></li>
          <% end %>
        </ul>
      </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
  </nav><!-- /.navbar -->


  <div class="container">
    <div class="row row-offcanvas row-offcanvas-right">
      <% if alert %>
      <div class="alert alert-danger">
        <p class="notice"><%= alert %></p>
      </div>
      <% end %>
      <% if notice %>
      <div class="alert alert-success">
        <p class="notice"><%= notice %></p>
      </div>
      <% end %>
      <%= yield %>
    </div><!--/row-->

    <hr>

    <footer>
      <p>© 2016 Fábio Goródscy.</p>
    </footer>

  </div><!--/.container-->

</body>
</html>
