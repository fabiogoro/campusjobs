<!DOCTYPE html>
<html>
<head>
  <title>CampusJobs --- Seu site de empregos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">CampusJobs</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class='<%= "active" if current_page? root_path%>'><a href="/">Início</a></li>
          <% if current_user %>
          <li class='<%= "active" if current_page? new_job_path%>'><a href=<%=new_job_path%>>Criar vaga</a></li>
          <li class='<%= "active" if current_page? new_company_path%>'><a href=<%=new_company_path%>>Cadastrar empresa</a></li>
          <%end%>
          <li class='<%= "active" if current_page? about_path%>'><a href="/about">Sobre</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li class="email <%= "active" if current_page? user_path(current_user)%>"><a href=<%=user_path(current_user)%>>Olá <%=current_user.email%></a></li>
            <li><a href=<%=destroy_user_session_path%> data-method="delete">Sair</a></li>
          <% else %>
            <li class=" <%= "active" if current_page? new_user_session_path%>"><a href="/users/sign_in">Entrar</a></li>
          <% end %>
        </ul>
      </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
  </nav><!-- /.navbar -->


  <div class="container">
    <div class="row row-offcanvas row-offcanvas-right">
      <% if alert %>
      <div class="alert alert-danger">
        <p class="notice"><%= alert %></p>
      </div>
      <% end %>
      <% if notice %>
      <div class="alert alert-success">
        <p class="notice"><%= notice %></p>
      </div>
      <% end %>
      <%= yield %>
    </div><!--/row-->

    <hr>

    <footer>
      <p>© 2016 Fábio Goródscy.</p>
    </footer>

  </div><!--/.container-->

</body>
</html>
