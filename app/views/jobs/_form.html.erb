<% if @job.errors.any? %>
  <div class="alert alert-danger">
    <h3><%= pluralize(@job.errors.count, "error") %> prohibited this post from being saved:</h3>

    <ul>
    <% @job.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @job, html: {class: "post-form"} do |f| %>
  <div class="form-group">
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>
  </div>

  <div class="form-group">
    <p><%= f.label :location %></p>
    <p><%= f.text_field :location %></p>
  </div>

  <div class="form-group">
    <p><%= f.label :company_id %></p>
    <p><%= f.collection_select :company_id, @companies, :id, :name %>
    <%= link_to '+', new_company_path, class: "btn btn-default glyphicon"%></p>
  </div>

  <div class="form-group">
    <p><%= f.label :description %></p>
    <p><%= f.text_area :description %></p>
  </div>

  <div class="form-group">
    <p><%= f.label :category %></p>
    <p><%= f.collection_select :category_id, @categories, :id, :name %>
    <%= link_to '+', new_category_path, class: "btn btn-default glyphicon"%></p>
  </div>

  <div class="form-group">
    <p><%= f.label :contract_type %></p>
    <p><%= f.collection_select :contract_type_id, @contract_type, :id, :name %>
    <%= link_to '+', new_contract_type_path, class: "btn btn-default glyphicon"%></p>
  </div>

  <div class="form-group">
    <p><%= f.label :featured %></p>
    <p><%= f.check_box :featured %></p>
  </div>

  <div class="btn-group">
    <p><%= f.submit "Salvar", class: "btn btn-default" %></p>
  </div>

<% end %>
