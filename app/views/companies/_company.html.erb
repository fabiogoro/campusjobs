<%if type=="full" %>
<div class="col-xs-12 col-sm-9">
  <p class="pull-right visible-xs">
    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
  </p>
  <div class="jumbotron">
    <table>
      <tr>
        <% unless company.logo_url.nil? %>
        <td class="logo col-xs-2 hidden-sm hidden-xs"><%=image_tag(company.logo_url(:standard))%></td>
        <td class="logo col-xs-2 visible-sm visible-xs"><%=image_tag(company.logo_url(:thumbnail))%></td>
        <%end%>
        <td class="title col-xs-10">
          <h1><%=company.name%></h1>
        </td>
      </tr>
    </table>
    <div class="info">
      <hr>
      <p><b>Localização: </b><%=company.location%></p>
      <p><b>Email: </b><%=company.mail%></p>
      <p><b>Telefone: </b><%=company.phone%></p>
    </div>
    <p><%= link_to ' Voltar', root_path, class: "btn btn-default glyphicon glyphicon-chevron-left" %>
      <%= link_to ' Editar', edit_company_path(company), class: "btn btn-default glyphicon glyphicon-edit" %></p>
  </div>
  <div class="row">
    <%= render company.jobs_active, type: "home" %>
  </div><!--/row-->
</div><!--/.col-xs-12.col-sm-9-->

<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
  <div class="list-group">
    <%= render @companies, type: "home", active: company.name %>
  </div>
</div><!--/.sidebar-offcanvas-->
<%else%>
<%if company.name == active %>
<%= link_to company.name, company, class: "list-group-item active" %>
<%else%>
<%= link_to company.name, company, class: "list-group-item" %>
<%end%>
<%end%>
