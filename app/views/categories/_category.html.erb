<%if type=="full" %>
<div class="col-xs-12 col-sm-9">
  <p class="pull-right visible-xs">
    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
  </p>
  <div class="jumbotron">
    <h1><%=category.name%></h1>
    <p><%= link_to ' Voltar', root_path, class: "btn btn-default glyphicon glyphicon-chevron-left" %></p>
  </div>
  <div class="row col-xs-12">
    <%= render category.jobs_active, type: "home" %>
  </div><!--/row-->
</div><!--/.col-xs-12.col-sm-9-->

<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
  <div class="list-group">
    <%= render @categories, type: "home", active: category.name %>
  </div>
</div><!--/.sidebar-offcanvas-->
<%else%>
<%if category.name == active %>
<%= link_to category.name, category, class: "list-group-item active" %>
<%else%>
<%= link_to category.name, category, class: "list-group-item" %>
<%end%>
<%end%>
