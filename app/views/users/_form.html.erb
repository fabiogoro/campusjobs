<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h3><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h3>

    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, html: {class: "post-form"} do |f| %>
  <div class="form-group">
    <p><%= f.label :mail %></p>
    <p><%= f.text_field :mail %></p>
  </div>

  <div class="form-group">
    <p><%= f.label :password %></p>
    <p><%= f.password_field :password %></p>
  </div>

  <div class="form-group">
    <p><%= f.label :password_confirmation %></p>
    <p><%= f.password_field :password_confirmation %></p>
  </div>

  <div class="btn-group">
    <p><%= f.submit "Cadastrar", class: "btn btn-default" %></p>
  </div>

<% end %>
